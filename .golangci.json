{
    "formatters": {
        "enable": [
            "gofmt",
            "goimports"
        ],
        "settings": {
            "gofmt": {
                "simplify": false
            }
        }
    },
    "linters": {
        "default": "none",
        "enable": [
            "govet",
            "revive",
            "ineffassign",
            "misspell",
            "staticcheck"
        ],
        "settings": {
            "govet": {
                "enable-all": true,
                "disable": [
                    "fieldalignment",
                    "shadow",
                    "nilness",
                    "structtag"
                ]
            },
            "misspell": {
                "ignore-rules": [
                    "Creater"
                ]
            },
            "staticcheck": {
                "checks": [
                    "S1005",
                    "S1008",
                    "ST1019",
                    "SA4023",
                    "SA4006"
                ]
            }
        },
        "exclusions": {
            "paths": [
                "vendor",
                "pkg/client",
                "pkg/generated",
                "tests/framework/clients/rancher/generated"
            ],
            "rules": [
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "should have comment"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "should be of the form"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "unused-parameter"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "redefines-builtin-id"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^var-naming"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^package-comments"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^unexported-return"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^exported"
                }
            ]
        }
    },
    "run": {
        "tests": false
    },
    "version": "2"
}