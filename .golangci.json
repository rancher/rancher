{
    "formatters": {
        "enable": [
            "gofmt",
            "goimports"
        ],
        "settings": {
            "gofmt": {
                "simplify": false
            }
        }
    },
    "linters": {
        "default": "none",
        "enable": [
            "govet",
            "revive",
            "ineffassign",
            "misspell",
            "staticcheck"
        ],
        "settings": {
            "govet": {
                "enable-all": true,
                "disable": [
                    "fieldalignment",
                    "shadow",
                    "nilness",
                    "structtag"
                ]
            },
            "misspell": {
                "ignore-rules": [
                    "Creater"
                ]
            },
            "staticcheck": {
                "checks": [
                    "U1000",
                    "ST1012",
                    "S1011",
                    "S1023",
                    "S1033",
                    "S1007",
                    "SA4017",
                    "S1021",
                    "S1004",
                    "S1001",
                    "S1000",
                    "S1017",
                    "S1036",
                    "SA9002",
                    "SA5001"
                ]
            }
        },
        "exclusions": {
            "paths": [
                "vendor",
                "pkg/client",
                "pkg/generated",
                "tests/framework/clients/rancher/generated"
            ],
            "rules": [
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "should have comment"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "should be of the form"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "unused-parameter"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "redefines-builtin-id"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^var-naming"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^package-comments"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^unexported-return"
                },
                {
                    "linters": [
                        "revive"
                    ],
                    "text": "^exported"
                }
            ]
        }
    },
    "run": {
        "tests": false
    },
    "version": "2"
}