                        string(credentialsId: 'ARM_CLIENT_SECRET', variable: 'ARM_CLIENT_SECRET')
                        ]) {
        def envToPass = setEnvFromParams2() + (paramsMap as List)
        withEnv(envToPass) {
        stage('Checkout') {
          deleteDir()
          checkout([
                    $class: 'GitSCM',
                    branches: [[name: "${env.BRANCH}"]],
                    extensions: scm.extensions + [[$class: 'CleanCheckout']],
                    userRemoteConfigs: [[url: "${env.REPO}"]]
                  ])
        }

        dir ("tests/validation") {
          stage('Configure and Build') {
            //setEnvFromParams()
            if (env.AWS_SSH_PEM_KEY && env.AWS_SSH_KEY_NAME) {
              dir(".ssh") {
                def decoded = new String(AWS_SSH_PEM_KEY.decodeBase64())
                writeFile file: AWS_SSH_KEY_NAME, text: decoded
              }
            }

            sh "./tests/v3_api/scripts/configure.sh"
            sh "./tests/v3_api/scripts/build.sh"
          }
          try {
            stage('Run Validation Tests') {
              try {
                sh "docker run --name ${testContainer}  --env-file .env --privileged " +
                  "${imageName} /bin/bash -c \'pytest -v -s --junit-xml=${testResultsOut} ${PYTEST_OPTIONS} ${testsDir}\'"
              } catch(err) {
                echo 'Test run had failures. Collecting results...'
              }
            }

            stage('Test Report') {
              sh "docker cp ${testContainer}:${rootPath}${testResultsOut} ."
              step([$class: 'JUnitResultArchiver', testResults: "**/${testResultsOut}"])
              sh "docker rm -v ${testContainer}"
              sh "docker rmi ${imageName}"
            }
          } catch(err){
            sh "docker stop ${testContainer}"
            sh "docker rm -v ${testContainer}"
            sh "docker rmi ${imageName}"
          }
        }
      }
    }
  }
  }
}

def setEnvFromParams() {
  // EXTRA_VARS contains parameters
  // from the Jenkins job -- these are written to a file and loaded
  // to expose the environment variables
  dir('.') {
    def vars = "${EXTRA_VARS}"
    writeFile(file: "pre_${paramsConfigFile}", text: vars)

    def paramsConfigFileContents = readFile("pre_${paramsConfigFile}")
    def paramsList = paramsConfigFileContents.split('\n')

    def newParams = []

    paramsList.each { param ->
      if (param != '' && param != null) {
        newParams << "env.${param}"
      }
    }
    finalParamsList = newParams.join('\n')

    println(finalParamsList)
    writeFile(file: paramsConfigFile, text: finalParamsList + '\n')
  }

  load paramsConfigFile
}

def setEnvFromParams2() {
  // EXTRA_VARS contains parameters
  // from the Jenkins job -- these are written to a file and loaded
  // to expose the environment variables
    def vars = "${EXTRA_VARS}"
    def paramsList = vars.split('\n')
    def finalList = []

    paramsList.each {
      if (it.contains('=')) {
        finalList << it
      }
    }

    return finalList as List
}