[Unit]
Description=Rancher Kubernetes Engine v2 (agent)
Documentation=https://rancher.com/docs/rancher/v2.x/en/
Wants=network-online.target
After=network-online.target
Conflicts=rancherd-server.service
Conflicts=rke2-agent.service
Conflicts=rke2-server.service

[Install]
WantedBy=multi-user.target

[Service]
EnvironmentFile=-/etc/default/rancherd-agent
EnvironmentFile=-/etc/sysconfig/rancherd-agent
EnvironmentFile=-/usr/local/lib/systemd/system/rancherd-agent.env
KillMode=process
Delegate=yes
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
ExecStart=/usr/local/bin/rancherd agent
